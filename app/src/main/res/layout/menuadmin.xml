<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ubi.di.pdm.tiagomartins.MenuAdmin">

    <Button
        android:id="@+id/startmenuaadddish"
        style="@android:style/Widget.Button.Small"
        android:layout_width="230dp"
        android:layout_height="88dp"
        android:layout_marginTop="76dp"
        android:drawableBottom="@mipmap/icons8_food"
        android:elevation="0dp"
        android:onClick="startAddDishMenu"
        android:text="Adicionar Prato"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/startmenueditardish"
        style="@android:style/Widget.Button.Small"
        android:layout_width="230dp"
        android:layout_height="88dp"
        android:layout_marginTop="188dp"
        android:drawableBottom="@mipmap/icons8_edit"
        android:onClick="startEditPratoMenu"
        android:text="Editar Prato"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />


    <Button
        android:id="@+id/startmenudelete"
        style="@android:style/Widget.Button.Small"
        android:layout_width="230dp"
        android:layout_height="88dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="312dp"
        android:drawableBottom="@mipmap/icons8_delete"
        android:onClick="startremovePrato"
        android:text="Eliminar Prato "
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/startmenusair"
        style="@android:style/Widget.Holo.Button"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:layout_width="92dp"
        android:layout_height="39dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:text="Sair"
        android:onClick="sair"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />






</android.support.constraint.ConstraintLayout>