<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/adicionarprato"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="129dp"
        android:layout_height="51dp"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="447dp"
        android:background="@color/colorPrimary"
        android:onClick="adicionarpratobd"
        android:text="Adicionar Prato"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/nomeprato"
        android:layout_width="228dp"
        android:layout_height="39dp"
        android:hint="Nome do Prato"
        android:maxLength="20"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="55dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.237"
        />


    <EditText
        android:id="@+id/descricao"
        android:layout_width="236dp"
        android:layout_height="119dp"
        android:inputType="textMultiLine"
        android:lines="5"
        android:maxLength="200"
        android:hint="Descrição"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="168dp"
        app:layout_constraintHorizontal_bias="0.25"
        android:background="@drawable/edit_textview"
        android:gravity="start">
    </EditText>


    <EditText
        android:id="@+id/preco"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:hint="Preço"
        android:inputType="numberDecimal"
        android:drawableRight="@mipmap/ic_euro_symbol_black_24dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="373dp"
        android:layout_marginStart="37dp" />

</android.support.constraint.ConstraintLayout>